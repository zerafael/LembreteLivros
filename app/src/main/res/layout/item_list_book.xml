<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_list_book_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/book_icon"/>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_list_book_image"
        android:textStyle="bold"
        android:text="@string/label_name_book_list"/>

    <TextView
        android:id="@+id/item_list_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/label_name"/>

    <TextView
        android:id="@+id/label_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_list_book_image"
        android:layout_below="@id/label_name"
        android:textStyle="bold"
        android:text="@string/label_pages_book_list"/>

    <TextView
        android:id="@+id/item_list_book_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/label_name"
        android:layout_toRightOf="@id/label_pages"/>

    <View style="@style/Divider"/>

</RelativeLayout>